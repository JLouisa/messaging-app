div#chatMessages
    if errors && errors.length > 0
        div.errorMsg
            each error in errors 
                div - #{error.msg}
    if succes
        div.succesMsg
            div - #{succes.msg}
    form#newMembers(hx-post=`/group/add/member/${groupID}` hx-target='#chatMessages' hx-swap="outerHTML") 
        div
            label(for="member") Add New Member
            br
            input.textInput(type='text' name="member" id="member" placeholder="Type a message" value = username ? username : "")
        div
            button.btn(type="Submit") Add
            button.btn(type="button" hx-get=`/message/group/${groupID}` hx-trigger="click" hx-target="#chatSection" hx-swap="outerHTML") Cancel

div.chatInputField(hx-swap-oob=true)
