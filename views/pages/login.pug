extends ../layout
block inner
    section#loginSection(hx-swap-oob=true)
        h1#logoLogin
            span.logoPart1 Whisper
            span.logoPart2 Wave
        h2.loginTitle= title
        if errors && errors.length > 0    
            div#loginValidationErrors
                each error in errors 
                    div - #{error.msg}
        div
            form(action="/login" method="POST")
                label(for="username") Username:
                input(type="text" name="username" id="username" placeholder="username" autocomplete="username")
                label(for="password") Password:
                input(type="password" name="password" id="password" placeholder="password")
                input(type='submit' value='Log in' class='btn')
        p Don't have an account yet? 
            a.clickableLinks(href="/signup") Sign up 