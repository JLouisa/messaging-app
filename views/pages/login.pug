extends ../layout
block content
    section#loginSection
        h1= title
        if errors && errors.length > 0    
            div#loginValidationErrors
                each error in errors 
                    div - #{error.msg}
        div
            form(action="", hx-post="/login" hx-target='#loginSection' hx-swap="outerHTML")
                label(for="username") Username:
                input(type="text" name="username" id="username" value="adamthefirst" placeholder="username" autocomplete="username")
                label(for="password") Password:
                input(type="password" name="password" id="password" value="Apple" placeholder="password")
                input(type='submit' value='Log in' class='btn')